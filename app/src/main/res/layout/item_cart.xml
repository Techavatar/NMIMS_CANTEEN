<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="2dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <!-- Food Image -->
        <ImageView
            android:id="@+id/foodImageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:contentDescription="Food Item"
            android:background="@color/imagePlaceholderBackground"
            android:layout_marginEnd="12dp" />

        <!-- Food Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Food Name -->
            <TextView
                android:id="@+id/foodNameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Food Item Name"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/textColorPrimary"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginBottom="4dp" />

            <!-- Vegetarian Badge and Price per item -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:id="@+id/vegetarianBadgeImageView"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_vegetarian"
                    android:contentDescription="Vegetarian"
                    android:layout_marginEnd="4dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/unitPriceTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="₹0.00 each"
                    android:textSize="12sp"
                    android:textColor="@color/textColorSecondary" />

            </LinearLayout>

            <!-- Quantity Controls and Total Price -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Quantity Controls -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:orientation="horizontal"
                    android:background="@drawable/quantity_controls_background"
                    android:gravity="center_vertical">

                    <ImageButton
                        android:id="@+id/decreaseQuantityButton"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_remove"
                        android:contentDescription="Decrease Quantity"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:tint="@color/textColorPrimary" />

                    <TextView
                        android:id="@+id/quantityTextView"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/textColorPrimary"
                        android:gravity="center"
                        android:layout_marginHorizontal="4dp" />

                    <ImageButton
                        android:id="@+id/increaseQuantityButton"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_add"
                        android:contentDescription="Increase Quantity"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:tint="@color/textColorPrimary" />

                </LinearLayout>

                <!-- Total Price -->
                <TextView
                    android:id="@+id/totalPriceTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="₹0.00"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorAccent"
                    android:gravity="end"
                    android:layout_marginStart="12dp" />

                <!-- Remove Button -->
                <ImageButton
                    android:id="@+id/removeItemButton"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_delete"
                    android:contentDescription="Remove Item"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:tint="@color/errorColor"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>